#!/bin/bash -e

RUN_DIR=/var/vcap/sys/run/statsd_injector
LOG_DIR=/var/vcap/sys/log/statsd_injector
PIDFILE=$RUN_DIR/statsd_injector.pid

source /var/vcap/packages/common/utils.sh

case $1 in

start)
pid_guard $PIDFILE "Statsd Injector"

mkdir -p $RUN_DIR
mkdir -p $LOG_DIR

echo $$ > $PIDFILE

exec /var/vcap/packages/statsd_injector/statsdinjector \
    -statsdPort=<%= p("statsd_injector.statsd_port") %> \
    -metronPort=<%= p("statsd_injector.metron_port") %> \
    -logLevel=<%= p("statsd_injector.log_level") %> \
    >>$LOG_DIR/statsd_injector.stdout.log \
    2>>$LOG_DIR/statsd_injector.stderr.log

;;

stop)
kill_and_wait $PIDFILE 40

;;

*)
echo "Usage: statsd_injector_ctl {start|stop}"

;;

esac
