#!/bin/bash -l

<%
raise "traffic_controller.disable_access_control must be true" unless p("traffic_controller.disable_access_control")
%>

set -e

export GOROOT=$(readlink -nf /var/vcap/packages/golang1.9.1)
export GOPATH=/var/vcap/packages/loggregator-acceptance-tests
export PATH=${GOROOT}/bin:${GOPATH}/bin:${PATH}

export CONFIG=/var/vcap/jobs/loggregator-acceptance-tests/bin/config.json
export CF_COLOR=false

mkdir -p /var/vcap/sys/log/acceptance_tests
rm -rf /var/vcap/sys/log/acceptance_tests/*

cd /var/vcap/packages/loggregator-acceptance-tests/src/code.cloudfoundry.org/loggregator/lats

echo '################################################################################################################'
echo $(go version)
echo CONFIG=$CONFIG
echo '################################################################################################################'

echo "Running loggregator acceptance tests..."

ginkgo -r
