#!/bin/bash -e

RUN_DIR=/var/vcap/sys/run/dea_logging_agent
LOG_DIR=/var/vcap/sys/log/dea_logging_agent
PIDFILE=$RUN_DIR/dea_logging_agent.pid

mkdir -p $RUN_DIR
mkdir -p $LOG_DIR

source /var/vcap/packages/loggregator_common/pid_utils.sh
source /var/vcap/packages/loggregator_common/syslog_utils.sh

tee_output_to_sys_log "$LOG_DIR"

case $1 in

  start)
    pid_guard $PIDFILE "DeaLoggingAgent"

    <% p("dea_logging_agent.debug") == true ? debug_string = "--debug " : debug_string = "" %>

    /var/vcap/packages/dea_logging_agent/deaagent <%= debug_string %> \
         --config /var/vcap/jobs/dea_logging_agent/config/dea_logging_agent.json &

    echo $! > $PIDFILE

    exec  >>$LOG_DIR/dea_logging_agent.stdout.log  \
          2>>$LOG_DIR/dea_logging_agent.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE 40

    ;;

  *)
    echo "Usage: dea_logging_agent_ctl {start|stop}"

    ;;

esac
