export PROFILE_EXECUTABLE="/var/vcap/packages/profiler/profiler.sh"

export LOGS_PROVIDER_ADDR="127.0.0.1:<%= link('reverse_log_proxy').p('reverse_log_proxy.egress.port') %>"
